<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thinc_easy.schoolmanager.LessonFragment" >

    <View
        android:id="@+id/status_bar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/status_bar_underlay" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_below="@id/status_bar_placeholder"
        android:background="@color/BackgroundColor" />

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_below="@id/status_bar_placeholder" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/subject_circle"
                android:layout_width="@dimen/subject_circle_large"
                android:layout_height="@dimen/subject_circle_large"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_general"
                style="@style/Card"
                custom:cardElevation="2dp"
                custom:cardUseCompatPadding="true" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvD2"
                        style="@style/CardTitle"
                        android:text="@string/general" />

                    <LinearLayout
                        style="@style/CardContent"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/CardContentText"
                            android:textColor="@color/SecondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="@string/subject" />

                        <TextView
                            android:id="@+id/tvSubjectName"
                            style="@style/CardContentText"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginBottom="@dimen/card_padding"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/tvD4"
                            style="@style/CardContentText"
                            android:textColor="@color/SecondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="@string/period" />

                        <TextView
                            android:id="@+id/tvPeriod"
                            style="@style/CardContentText"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginBottom="@dimen/card_padding"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/tvD3"
                            style="@style/CardContentText"
                            android:textColor="@color/SecondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="@string/Teacher" />

                        <TextView
                            android:id="@+id/tvTeacher"
                            style="@style/CardContentText"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginBottom="@dimen/card_padding"
                            android:text="TextView" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="176dp" />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_dropshadow_height"
        android:background="@drawable/toolbar_dropshadow"
        android:layout_marginTop="?actionBarSize"
        android:layout_below="@id/status_bar_placeholder" />

</RelativeLayout>