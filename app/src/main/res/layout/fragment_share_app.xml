<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thinc_easy.schoolmanager.ShareAppFragment"
    android:background="@color/color_home">

    <TextView
        style="@style/ExtendedToolbarTitleStyle"
        android:textSize="45sp"
        android:text="@string/share_app_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/share_app_fragment_fill_in_your_message"
                android:textSize="@dimen/card_content_text"
                android:textColor="@color/SecondaryTextDarkBg" />

            <EditText
                android:id="@+id/editShareText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/share_app_default_share_text"
                android:textColor="@color/TextDarkBg"
                android:textSize="16dp"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/tvLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/link_to_play_store_page"
                android:textSize="16dp"
                android:textColor="@color/TextDarkBg" />

            <Button
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/button_min_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_gravity="center_horizontal"
                android:text="@string/share"
                android:textColor="@color/color_home_accent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_marginBottom="@dimen/card_margin"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:textColor="@color/TextDarkBg"
                android:text="@string/thank_you_smiley"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>