<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    android:orientation="vertical"
    tools:context="com.thinc_easy.schoolmanager.NewTtDoneFragment" >

    <android.support.v7.widget.CardView
        style="@style/Card"
        custom:cardElevation="2dp"
        custom:cardUseCompatPadding="true"
        custom:cardBackgroundColor="@color/color_timetable_dark"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvD1"
                style="@style/CardTitle"
                android:text="@string/done_em"
                android:textColor="@color/TextDarkBg" />

            <TextView
                android:id="@+id/tvD2"
                style="@style/CardContent"
                android:text="@string/new_tt_done_body"
                android:textColor="@color/TextDarkBg" />

            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/confirm"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccentLight"
                    android:text="@string/Next" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_dropshadow_height"
        android:background="@drawable/toolbar_dropshadow"
        android:layout_alignParentTop="true" />

</RelativeLayout>